module lot_spots (
	input logic [1:0] cars,
	output logic [6:0] hex0,
	output logic [6:0] hex1, 
	output logic [6:0] hex2,
	output logic [6:0] hex3
);

	always_comb begin
		case(cars)
			2'b00: begin
						hex0 <= 7'b1000000;
						hex1 <= 7'b1111111;
						hex2 <= 7'b1111111;
						hex3 <= 7'b1111111;
					 end
			2'b01: begin
						hex0 <= 7'b1111001;
						hex1 <= 7'b1111111;
						hex2 <= 7'b1111111;
						hex3 <= 7'b1111111;
					 end
			2'b10: begin
						hex0 <= 7'b0100100;
						hex1 <= 7'b1111111;
						hex2 <= 7'b1111111;
						hex3 <= 7'b1111111;
					 end
			2'b11: begin
						hex0 <= 7'b1000111;
						hex1 <= 7'b1000111;
						hex2 <= 7'b1000001;
						hex3 <= 7'b0001110;
					 end
		endcase
	end
endmodule
//testbench
module lot_spots_tb();
	logic [1:0] cars;
	logic [6:0] hex0, hex1, hex2, hex3;
	
	lot_spots dut(.*);
	
	initial begin
		cars <= 2'b00; #5;
		cars <= 2'b01; #5;
		cars <= 2'b10; #5;
		cars <= 2'b11; #5;
		$stop;
	end
endmodule
